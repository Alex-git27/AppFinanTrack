@model TipoCuenta


@{
    ViewData["Title"] = "Editar Tipo Cuenta";
}

<h1>Editar Tipo Cuenta: @Model.Nombre</h1>



@* //POST hacia controlador de tipos cuentas *@
<div asp-validation-summary="All" class="text-danger"></div>



@* //POST hacia controlador de tipos cuentas *@
<form asp-action="Editar">
    <input type="hidden" asp-for="Id"/>
    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"> </label>
        <input type="text" asp-for="Nombre" class="form-control" /> @* //El asp-for evita que se elimine la info del label *@
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Enviar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}